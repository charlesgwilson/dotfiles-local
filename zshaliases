alias gpr='git pull --rebase --autostash'
alias gfp='branch=$(git rev-parse --abbrev-ref HEAD); if [ $branch != "main" ]; then git push origin $branch --force-with-lease; else echo "DO NOT force push on main\!"; fi'
alias gprune='git fetch --prune'
alias gco='git checkout'
alias gcob='git checkout -b'
alias rails='bundle exec rails'
alias rsnf='bundle exec rspec --pattern "spec/**/*_spec.rb" --exclude-pattern "spec/features/**/*_spec.rb"'
alias rspec='bundle exec rspec'
alias lsr='cd $HOME/Sites/BuoyRails'
alias wharf='cd $HOME/Sites/Wharf'
